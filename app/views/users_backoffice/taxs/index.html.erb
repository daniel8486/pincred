
<div class="container">
<p id="notice"><%= notice %></p>

<h1> Listagem de Taxas  </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_tax_path, class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>



<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Status</th>
      <th> Ações </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxs.each do |tax| %>
      <tr>
        <td><%= tax.title %></td>
        <td><%= tax.content.html_safe  %></td>
        <td><%= tax.status %></td>
        <td><%= link_to 'Mostrar', users_backoffice_tax_path(tax), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_tax_path(tax), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_tax_path(tax) , method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>