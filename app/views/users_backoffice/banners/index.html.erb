<div class="container">
<div class="row">
   <div class="col-lg-12">
      <h1 class="page-header"> <h3 class="center-align"> Listando Banners </h3> </h1>
   </div>
</div>  
    
    <div class="left"> 
  
  <%=  link_to 'Incluir' ,  new_users_backoffice_banner_path , class:"waves-effect blue btn"  %>

    </div> 

   

<table>
        <thead>
          <tr>
              <th class="center"> Titulo</th>
              <th class="center"> Conteudo </th>
              <th class="center"> Imagem </th>
              <th class="center"> Posicao </th>
              <th class="center"> Ações </th>
              <th class="center"> Editar</th>
              <th class="center"> Mostrar </th>
              <th class="center"> Excluir </th>
          </tr>
        </thead>

        <tbody>
        <% @banners.each do |banner| %>
          <tr>
            <td> <%= banner.title %> </td>
            <td> <%= banner.content%> </td>
            <td> <%= banner.image %> </td>
            <td><%= banner.position %></td>
            <td><%= banner.avatar %></td>
            <td>  
             <%=  link_to 'Editar' , edit_users_backoffice_banner_path(banner), class:"waves-effect grey btn"  %>
            </td>
            <td> 
              <%=  link_to 'Mostrar' , users_backoffice_banner_path(banner), class:"waves-effect green btn" %>
            </td>
            <td> 
             <%=  link_to 'Excluir' , users_backoffice_banner_path(banner), class:"waves-effect red btn" ,method: :delete , data: {confirm: "Deseja realmente excluir ?"} %>
            </td>
          </tr>
        <% end %>  
        </tbody>
      </table>

<div class="center">
      <%= paginate @banners %>
</div>     


</div>