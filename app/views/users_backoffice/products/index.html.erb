<div class="container">
<p id="notice"><%= notice %></p>

<h1> Listagem de Produtos </h1> 

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_product_path, class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>



<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descrição</th>
      <th>Status</th>
      <th> Ações </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description.html_safe %></td>
        <td><%= product.status %></td>
        <td><%= link_to 'Mostrar', users_backoffice_product_path(product) , class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_product_path(product), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>




