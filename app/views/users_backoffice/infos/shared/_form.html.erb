

<div class="row"> 
   <div class="col-lg-12">
      <h1 class="page-header"> <h3 class="left-align"> <%= action_message %></h3> </h1>
   </div>

   <% if @info.errors.any? %>
   <div class="alert alert-danger alert-dismissable">
     <button type="button" class="close" data-dismiss="alert" aria-hidden="text">
     <ul> 
        <% @info.errors.full_messages.each do |message|%>
        <li> <%= message %> </li>
        <% end %>
     </ul>
</div> 

<% end %>

<div class="row">
    <%= form_with(model: [ :users_backoffice, @info], local: true) do |form| %>
      <div class="row">
        
         <div class="input-field col s6">
          <%= form.text_field :title, placeholder: "Informe o titulo: ", class: "validate" %>
          <%#= form.label :description_image%>
          
             <div class="input-field col2 s18">
            <%= form.cktext_area :content, placeholder: " Informe o conteudo:  ", class: "validate" %>
             <%#= form.label :departament %>
             </div>

        </div>
               
          
        </div>

         <button class="btn waves-effect green btn" type="submit" name="action"> Salvar
    <i class="material-icons right">send</i>
  </button>
        
      
      </div>
  
    <% end %>

        



</div>