<div class="container">



<div class="row">
   <div class="col-lg-12">
      <h1 class="page-header"> <h3 class="center-align"> Listando os Usu√°rios </h3> </h1>
   </div>
</div>  
    
    <div class="right"> 
  
  <%=  link_to 'Incluir' ,  new_users_backoffice_user_path , class:"waves-effect blue btn"  %>

    </div>

<table>
        <thead>
          <tr>
              <th class="center"> ID </th>
              <th class="center"> Nome </th>
              <th class="center"> Email </th>
              <th class="center"> Ativo </th>
              <th class="center"> Actions </th>
          </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td> <%= user.id %> </td>
            <td> <% user.id %> </td>
            <td> <%= user.email %> </td>
            <td><%= user.created_at%></td>
            <td>  
             <%=  link_to 'Editar' , edit_users_backoffice_user_path(user), class:"waves-effect grey btn"  %>
              <%=  link_to 'Mostrar' , users_backoffice_users_path(user), class:"waves-effect green btn" %>
             <%=  link_to 'Excluir' , users_backoffice_users_path(user), class:"waves-effect red btn" ,method: :delete , data: {confirm: "Deseja realmente excluir ?"} %>
            </td>
          </tr>
        <% end %>  
        </tbody>
      </table>

<div class="center">
      <%= paginate @users %>
</div>     

  
</div>