<div class="container">

<div class="row">
   <div class="col-lg-12">
      <h1 class="page-header"> <h3 class="center-align"> Listando Imagem 3 </h3> </h1>
   </div>
</div>  
    
    <div class="left"> 
  
  <%=  link_to 'Incluir' ,  new_users_backoffice_imagem_path , class:"waves-effect blue btn"  %>

    </div>

<table>
        <thead>
          <tr>
              <th class="center"> Titulo</th>
              <th class="center"> Conteudo </th>
              <th class="center"> Imagem </th>
          </tr>
        </thead>

        <tbody>
        <% @imagems.each do |imagem| %>
          <tr>
            <td> <%= imagem.title %> </td>
            <td> <%= imagem.content %> </td>
            <td><%= imagem.avatar %></td>
            <td>  
             <%=  link_to 'Editar' , edit_users_backoffice_imagem_path(imagem), class:"waves-effect grey btn"  %>
              <%=  link_to 'Mostrar' , users_backoffice_imagem_path(imagem), class:"waves-effect green btn" %>
             <%=  link_to 'Excluir' , users_backoffice_imagem_path(imagem), class:"waves-effect red btn" ,method: :delete , data: {confirm: "Deseja realmente excluir ?"} %>
            </td>
          </tr>
        <% end %>  
        </tbody>
      </table>



</div>