
<div class="container">

<br>
<br>

<p id="notice"><%= notice %></p>

<h1> Rodape </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_content_path , class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>



<table>
  <thead>
    <tr>
      <th>Titulo:</th>
      <th>Endereço </th>
      <th> Telefone</th>
      <th> Email </th>
      <th> Telefone 2  </th>
      <th> Ações </th>
      <th> Mostrar </th>
      <th> Editar </th>
      <th> Excluir </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= truncate(content.address.html_safe, :length => 100)  %></td>
        <td><%= content.phone%></td>
        <td><%= content.email %></td>
        <td><%= content.phone_two %></td>
        <td> </td>
        <td><%= link_to 'Mostrar', users_backoffice_content_path(content), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_content_path(content), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_content_path(content) , method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>