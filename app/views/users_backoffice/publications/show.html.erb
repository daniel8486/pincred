<div class="container">
<p id="notice"><%= notice %></p>

<h1> Mostra de Publicações </h1>

<table>
        <thead>
          <tr>
              <th> <strong> Titulo:</strong> </th>
              <td> <strong> Conteúdo:</strong></td>
              <td> <strong> Status: </strong></td>
              <td> <strong> Documentos : </strong> </td>
              <th><strong> Ações:  </strong></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            
            <td><%= @publication.title %> </td>
            <td>  <%= @publication.content.html_safe %> </td>
            <td> <%= @publication.status %> </td>
            <td>  <% @publication.documents.each_with_index do |document,index|%> </td>
            <td> <%#= @publication.document %>
            <td> <%#= @publication.document.url %>
             <td> <%= link_to("Anexo #(index+1)", document.url, target: '_blank')%> </td>
            <br/>
            <% end %>
            <%= link_to 'Editar', edit_users_backoffice_publication_path(@publication) , class: "waves-effect green btn" %> |
<%= link_to 'Voltar', users_backoffice_publications_path, class: "waves-effect yellow btn"  %>
            </td>
          </tr>
        </tbody>
      </table>

</div>      