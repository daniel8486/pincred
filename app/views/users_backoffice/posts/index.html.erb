
<div class="container">
<p id="notice"><%= notice %></p>

<h1> Listagem de Posts  </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_post_path , class: "waves-effect blue btn" %> </th>
    </tr>
  
  </thead>



<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Texto</th>
      <th>Status</th>
      <th> Ações </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text.html_safe  %></td>
        <td><%= post.status %></td>
        <td><%= link_to 'Mostrar', users_backoffice_post_path(post), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_post_path(post), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_post_path(post) , method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>