
<div class="container">

<br>
<br>

<p id="notice"><%= notice %></p>

<h1> Informativos </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_information_path , class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>



<table>
  <thead>
    <tr>
      <th> ID </th>
      <th>Titulo:</th>
      <th>Texto: </th>
      <th> Ações </th>
      <th> Mostrar </th>
      <th> Editar </th>
      <th> Excluir </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informations.each do |information| %>
      <tr>
        <td><%= information.id %></td>
         <td><%= information.title %></td>
        <td><%= truncate(information.content.html_safe, :length => 100)  %></td>
        <td> </td>
        <td><%= link_to 'Mostrar', users_backoffice_information_path(information), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_information_path(information), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_information_path(information) , method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>