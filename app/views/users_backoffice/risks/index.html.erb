
<div class="container">

<br>
<br>

<p id="notice"><%= notice %></p>

<h1> Mostragem de Taxas de Risco </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_risk_path , class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>



<table>
  <thead>
    <tr>
      <th>Titulo:</th>
      <th>Texto: </th>
      <th> Ações </th>
      <th> Mostrar </th>
      <th> Editar </th>
      <th> Excluir </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @risks.each do |risk| %>
      <tr>
        <td><%= risk.title %></td>
        <td><%= truncate(risk.content.html_safe, :length => 100)  %></td>
        <td> </td>
        <td><%= link_to 'Mostrar', users_backoffice_risk_path(risk), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_risk_path(risk), class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_risk_path(risk) , method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>