
<div class="container">

<p id="notice"><%= notice %></p>

<h1> Listar Contatos </h1>

<table class="bordered highlight right">
  <thead>
    <tr> </tr>
    <tr>
      <th> <%= link_to 'Incluir', new_users_backoffice_contact_path, class: "waves-effect blue btn" %> </th>
    </tr>
  </thead>


<table>
  <thead>
    <tr>
      <th>SETOR </th>
      <th> NOME </th>
      <th> CPF</th>
      <th> EMAIL </th>
      <th> TELEFONE </th>
      <th> CONTEUDO </th>
      <th> AÇÕES </th>
      <th> MOSTRAR </th>
      <th> EDITAR </th>
      <th> EXCLUIR </th>
      <th> IMPRIMIR | GERAR PDF </th>
    </tr>
  </thead>

  <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.cpf  %></td>
        <td><%= contact.description_name %></td>
        <td><%= contact.cpf  %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.content.html_safe  %></td>
        <td> -- </td>
        <td><%= link_to 'Mostrar', users_backoffice_contact_path(contact), class: "waves-effect green btn"%></td>
        <td><%= link_to 'Editar', edit_users_backoffice_contact_path(contact) , class: "waves-effect yellow btn"%></td>
        <td><%= link_to 'Excluir', users_backoffice_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' } ,class: "waves-effect red btn"%></td> 
        <td> 
         <%= link_to 'print', root_path, class: "material-icons" %> | 
         <%= link_to 'picture_as_pdf', root_path, class: "material-icons"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <div class="center">
      <%= paginate @contacts %>
</div>

</div>